<div class="right_col" role="main">
    <h3 class="box-title ">Chat History</h3>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" >
                <div class="x_title">
                    <h2>Conversation History
                        <small class="ServiceName"></small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Chatbot Conversation Monitoring</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form role="form">
                            <div class="box-body">

                                <div class="form-group">
                                    <label>Date range:</label>

                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control pull-right" id="searchdate">
                                    </div>
                                    <!-- /.input group -->
                                </div>
                            </div>
                            <!-- /.box-body -->

                            <div class="box-footer">
                                <button type="submit" id="ConversationFormSubmit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>

                    <div class="box">
                        
                        <!-- /.box-header -->
                        <div class="box-body">
                           
                            <table id="conv_table" cellpadding="0" cellspacing="0" border="0" class="dataTable table table-striped table-bordered jambo_table"></table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->

                </div>
            </div>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" style="height: auto;">
                <div class="x_title">
                    <h2>Fallback history
                        <small class="ServiceName"></small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link">
                                <i class="fa fa-chevron-down"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content" style="display: none;">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Chatbot Fallback Response Monitoring</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form role="form">
                            <div class="box-body">

                                <div class="form-group">
                                    <label>Date range:</label>

                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control pull-right" id="searchdateFallback">
                                    </div>
                                    <!-- /.input group -->
                                </div>
                            </div>
                            <!-- /.box-body -->

                            <div class="box-footer">
                                <button type="submit" id="FallbackFormSubmit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>

                    <div class="box">
                        
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="FallbackTable" cellpadding="0" cellspacing="0" border="0" class="dataTable table table-striped table-bordered jambo_table"></table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->

                </div>
            </div>
        </div>
    </div>
</div>
           
